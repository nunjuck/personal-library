      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "autoprefixer": "^10.3.4",
    "husky": "^7.0.2",
    "npm-run-all": "^4.1.5",
