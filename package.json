{
  "name": "library.koshelev.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:css": "postcss src/styles/main.css -o src/index.css",
    "watch:css": "postcss src/styles/main.css -o src/index.css -w",
    "start": "npm-run-all -p watch:css start-js",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "build": "npm-run-all build:css build-js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/ --ext .ts,.tsx --cache",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@notionhq/client": "^0.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@types/react-lazy-load-image-component": "^1.5.2",
    "@types/react-router-dom": "^5.1.9",
    "axios": "^0.21.1",
    "http-proxy-middleware": "^2.0.1",
    "lint-staged": "^11.1.2",
    "normalize.css": "^8.0.1",
    "prettier": "2.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-lazy-load-image-component": "^1.5.1",
    "react-query": "^3.23.0",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "web-vitals": "^1.1.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:changed",
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/react": "^12.1.2",
    "autoprefixer": "^10.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0"
  },
  "proxy": "https://api.notion.com/",
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint:fix",
    "*.{js,jsx,ts,tsx,css,md,json}": "yarn format"
  }
}
